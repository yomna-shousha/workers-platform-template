{
  "env": {
    "browser": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "eqeqeq": ["error", "always", { "null": "ignore" }]
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["**/dist/*", "**/node_modules/*"],
  "root": true
}
